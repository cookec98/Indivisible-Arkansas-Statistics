@section Scripts {

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
    <script>

        function ViewFunction(conID) {

            console.log("clicked button.");
            console.log(conID - 1 + " contact");

            //run a for loop?

            $.ajax({
                url: '/Contacts/Filter',
                data: {
                    Contact: conID
                }
            })
                .done(function (result) {
                    console.log(result);

                    $("#info_view").empty();
                    //$("#info_view").append("<li> First Name: result....</li>");

                    $("#info_view").append("<li> Middle Name: @Model.Contact[0].M_name</li>");
                    $("#info_view").append("<li> Last Name: @Model.Contact[0].L_name</li>");
                    $("#info_view").append("<li> Email: @Model.Contact[0].Email</li>");
                    $("#info_view").append("<li> Address: @Model.Contact[0].Address</li>");
                });
                    
        }
    </script>
}

