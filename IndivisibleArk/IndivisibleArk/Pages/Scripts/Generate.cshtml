@page
@model IndivisibleArk.Pages.Scripts.GenerateModel

@{
    ViewData["Title"] = "Generate";
}

<h1>Generate Named Script</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Script[0].Topic)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Script)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Topic)
                </td>
                <td>
                    <button id="gen_btn" onclick="genFunction('@item.Text','Max', 'Josh')">Use</button>
                </td>
            </tr>
        }

    </tbody>
</table>